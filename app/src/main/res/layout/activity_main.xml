<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nps.gofferwall.sample.MainActivity">

    <Button
        android:id="@+id/btn_show_offerwall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show offerwall"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_show_tapjoy_offerwall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Tapjoy offerwall"
        app:layout_constraintTop_toBottomOf="@id/btn_show_offerwall" />

    <Button
        android:id="@+id/btn_show_tnk_offerwall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show TNK offerwall"
        app:layout_constraintTop_toBottomOf="@id/btn_show_tapjoy_offerwall" />

</androidx.constraintlayout.widget.ConstraintLayout>